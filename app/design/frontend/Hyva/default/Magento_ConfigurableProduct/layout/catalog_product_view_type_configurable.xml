<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.form">
            <block class="Magento\ConfigurableProduct\Block\Product\View\Type\Configurable"
                   name="product.info.options.configurable"
                   as="options_configurable"
                   before="-"
                   template="Magento_ConfigurableProduct::product/view/type/options/configurable.phtml"
            />
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block name="product.info.options.configurable.js"
                   as="options_configurable_js"
                   template="Magento_ConfigurableProduct::product/view/type/options/js/configurable-options.phtml"
            />
        </referenceContainer>
    </body>
</page>
