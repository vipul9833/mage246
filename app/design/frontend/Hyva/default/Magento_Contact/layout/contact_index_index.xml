<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Contact Us</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Contact\Block\ContactForm" name="contactForm" template="Magento_Contact::form.phtml" cacheable="false">
                <container name="form.additional.info" label="Form Additional Info"/>
                <container name="form.additional.after" label="Form Additional After Container"/>
                <block name="contactDetails" as="contact.details" template="Magento_Contact::form/contact-details.phtml" />
            </block>
        </referenceContainer>
    </body>
</page>
